#include <stdio.h>

int main() {
    int rows = 5; // Number of rows in the pattern

    printf("Pattern:\n");

    // Outer loop to iterate over rows
    for (int i = 1; i <= rows; ++i) {
        // Inner loop to print '*' for each row
        for (int j = 1; j <= i; ++j) {
            printf("*");
        }
        printf("\n"); // Move to the next line after each row
    }

    return 0;
}
