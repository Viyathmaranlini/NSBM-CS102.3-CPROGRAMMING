#include <stdio.h>

int main() {
    int array[10];
    int evenCount = 0;

    // Prompt the user to input elements of the array
    printf("Enter 10 integers:\n");

    // Read input for each element of the array
    for (int i = 0; i < 10; ++i) {
        printf("Enter element %d: ", i + 1);
        scanf("%d", &array[i]);

        // Check if the input number is even, and increment evenCount if so
        if (array[i] % 2 == 0) {
            evenCount++;
        }
    }

    // Print the count of even numbers
    printf("Number of even numbers in the array: %d\n", evenCount);

    return 0;
}

